extend base

block content
    br
    br
    h2.subheading Your Wishlist

    if temp_user.wish_list.length === 0
       h2.space Your Wishlist is Empty 
    else
        #middle5
            br
            br
            part
                for plan in temp_user.wish_list
                    part5
                        part1
                            h2 #{plan.name}

                            part3
                                h1(style='color: rgb(8, 187, 8) ') #{plan.price}
                                p(style='color: rgb(8, 187, 8) ')  /month
                            p(style='margin-bottom:0.8rem; font-size:110%;') That&apos;s only #{plan.avgprice}$ per meal
                            hr
                            part2
                                part4
                                    i.fas.fa-check-circle
                                    p 1 meal every day
                                part4
                                    i.fas.fa-check-circle
                                    p Order 24/7
                                part4
                                    i.fas.fa-check-circle
                                    p Access to newest creation
                                part4
                                    i.fas.fa-check-circle
                                    p Free delivery
                                hr
                        .hi
                            button.a3#unwishlist(value='#{plan.price}' data-plan-id = `${plan["_id"]}`) Delete
                            button.a3.bookPlan#unwishbook(value='#{plan.price}' onClick="window.location.href='#plan-booking'" data-plan-id = `${plan["_id"]}`) Buy Now

            